# =============================================================================
# GENERAL APPLICATION SETTINGS
# =============================================================================
APP_NAME=OmniSphere
APP_VERSION=1.0.0
APP_ENVIRONMENT=development  # development, staging, production
DEBUG=true
SECRET_KEY=your-super-secret-key-here-change-this-in-production
