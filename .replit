# Replit Configuration for OmniSphere Scaling System
[build]
run = "python core/scaling_orchestrator.py"

[deployment]
run = "python core/scaling_orchestrator.py"
deploymentTarget = "gce"

[[ports]]
localPort = 8000
externalPort = 80

[env]
PYTHONPATH = "/home/runner/omnisphere"
PYTHON_VERSION = "3.10"

[languages.python3]
pattern = "**/*.py"
[languages.python3.languageServer]
start = "pylsp"

[gitHubImport]
requiredFiles = [".replit", "requirements.txt"]

[nix]
channel = "stable-21_11"

[unitTest]
language = "python3"

[debugger]
support = true

  [debugger.interactive]
  transport = "localhost:5678"
  startCommand = ["dap-python", "main.py"]

    [debugger.interactive.integratedAdapter]
    dapTcpAddress = "localhost:5678"

    [debugger.interactive.initializeMessage]
    command = "initialize"
    type = "request"

      [debugger.interactive.initializeMessage.arguments]
      adapterID = "debugpy"
      clientID = "replit"
      clientName = "replit.com"
      columnsStartAt1 = true
      linesStartAt1 = true
      locale = "en-us"
      pathFormat = "path"
      supportsInvalidatedEvent = true
      supportsProgressReporting = true
      supportsRunInTerminalRequest = true
      supportsVariablePaging = true
      supportsVariableType = true

    [debugger.interactive.launchMessage]
    command = "launch"
    type = "request"

      [debugger.interactive.launchMessage.arguments]
      args = []
      code = "import sys\nsys.path.append('/home/runner/omnisphere')\nfrom core.scaling_orchestrator import ScalingOrchestrator\norchestrator = ScalingOrchestrator()\norchestrator.scale_system(50, 'balanced')\n\n# Keep running\nimport time\nwhile True:\n    time.sleep(60)\n    metrics = orchestrator.get_scaling_metrics()\n    print(f'Status - Channels: {metrics.active_channels}, Workers: {metrics.total_workers}')\n"
      console = "integratedTerminal"
      cwd = "/home/runner/omnisphere"
      debugOptions = ["RedirectOutput", "DebugStdLib"]
      module = ""
      program = "/home/runner/omnisphere/main.py"
      python = "/home/runner/omnisphere/venv/bin/python"
      pythonPath = "/home/runner/omnisphere"
      showReturnValue = true
      stopOnEntry = false
      subProcess = true
      type = "python"
